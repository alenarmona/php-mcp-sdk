{
  "name": "mcp/laravel",
  "description": "Laravel integration package for PHP MCP SDK - seamless Model Context Protocol integration with Laravel applications",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Dale Hurley",
      "email": "dale@example.com"
    }
  ],
  "homepage": "https://github.com/dalehurley/php-mcp-sdk",
  "keywords": [
    "laravel",
    "mcp",
    "model-context-protocol",
    "llm",
    "ai",
    "package"
  ],
  "require": {
    "php": "^8.1",
    "dalehurley/php-mcp-sdk": "*@dev",
    "illuminate/support": "^10.0|^11.0",
    "illuminate/console": "^10.0|^11.0",
    "illuminate/http": "^10.0|^11.0",
    "illuminate/routing": "^10.0|^11.0",
    "illuminate/config": "^10.0|^11.0",
    "illuminate/cache": "^10.0|^11.0",
    "illuminate/database": "^10.0|^11.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0",
    "phpunit/phpunit": "^10.5",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "suggest": {
    "inertiajs/inertia-laravel": "For React/Vue.js frontend components",
    "laravel/octane": "For high-performance async server support",
    "pusher/pusher-php-server": "For real-time WebSocket notifications"
  },
  "autoload": {
    "psr-4": {
      "MCP\\Laravel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MCP\\Laravel\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "MCP\\Laravel\\McpServiceProvider"
      ],
      "aliases": {
        "Mcp": "MCP\\Laravel\\Facades\\Mcp"
      }
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse src tests --level=8",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "../"
    }
  ]
}